<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            >

            <ImageView
                android:layout_width="500dp"
                android:layout_height="100dp"
                android:id="@+id/cardview_news_mainimage"
                android:src="@drawable/loadicon"
                android:scaleType="fitXY"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/cardview_news_mainimage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/cardview_news_iv_newsicon"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/loadicon"/>
                    <TextView
                        android:id="@+id/cardview_news_tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dave and Buster's"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/cardview_news_tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50% off Eat and play combo"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>